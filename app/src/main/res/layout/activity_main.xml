<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.bossini.gasolinaouetanol.MainActivity"
    android:columnCount="2">

    <TextView
        android:paddingBottom="@dimen/padding_textview"
        android:paddingTop="@dimen/padding_textview"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:gravity="center_horizontal"
        android:layout_columnSpan="2"
        android:text="@string/preco_da_gasolina"
         />

    <TextView
        android:id="@+id/preco_da_gasolina_textview"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_columnWeight="2"
        android:layout_row="1"
        android:paddingBottom="@dimen/padding_textview"
        android:paddingTop="@dimen/padding_textview"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <SeekBar
        android:progress="300"
        android:max="600"
        android:paddingBottom="@dimen/padding_seekbar"
        android:paddingTop="@dimen/padding_seekbar"
        android:id="@+id/preco_da_gasolina_seekbar"
        android:layout_columnWeight="5"
        android:layout_gravity="fill_horizontal"
        android:layout_height="wrap_content" />


    <TextView
        android:paddingBottom="@dimen/padding_textview"
        android:paddingTop="@dimen/padding_textview"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_gravity="fill_horizontal"
        android:gravity="center_horizontal"
        android:layout_columnSpan="2"
        android:text="@string/preco_do_etanol"
        />


    <TextView
        android:id="@+id/preco_do_etanol_textview"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_columnWeight="2"
        android:layout_row="3"
        android:paddingBottom="@dimen/padding_textview"
        android:paddingTop="@dimen/padding_textview"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <SeekBar
        android:progress="300"
        android:max="600"
        android:layout_row="3"
        android:paddingBottom="@dimen/padding_seekbar"
        android:paddingTop="@dimen/padding_seekbar"
        android:id="@+id/preco_do_etanol_seekbar"
        android:layout_columnWeight="5"
        android:layout_gravity="fill_horizontal"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/melhor_opcao_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/padding_textview"
        android:paddingTop="@dimen/padding_textview"
        android:text="@string/melhor_opcao"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <ImageView
        android:id="@+id/melhor_opcao_imageview"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@mipmap/ic_launcher" />


</GridLayout>
